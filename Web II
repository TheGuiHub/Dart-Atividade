void main () {
  
  
  String nome_usuario = "Sarah";
  String sobrenome_usuario = "Silva";
  String altura = "1,62";
  
  /
  print ("Nome: $ nome_usuario \ n"
        "Sob sobrenome: $ sobrenome_usuario \ n"
        "Altura: $ altura");
  
  impressão("----------------------");
  
  
  print ("Nome:" + nome_usuario + "\ n" +
        "Sobrenome:" + sobrenome_usuario + "\ n" + 
        "Altura:" + altura);
    
}
