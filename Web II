void main () {
  
  
  nome dinâmico = "Sarah Sarada"; 
  idade dinâmica = 22; // 
  peso dinâmico = 55,6; //
  altura dinâmica = 1,88; 
  
  print ("Nome: $ nome \ n"
        "Idade: $ idade \ n"
        "Peso: $ peso \ n"
        "Altura: $ altura");
  
}

