void main () {
  
  
  var nome = "Guilherme";
  var idade = "17 anos";
  var endereco = "Rua Marshall Floriano, 91";
  
  imprimir (nome);
  impressão (idade);
  imprimir (endereco);
  
  imprimir (nome + idade + endereco);
  
  print ("Nome: $ nome \ n"
        "Idade: $ idade \ n"
        “Endereço: $ endereco”);
 
}


---------------------------------------
void main () {
  
  / *
   * varriável num pode receber inteiros
   * e pontos flutuantes
   * /
  num pi = 3;
  pi = 3,14;
  imprimir (pi);
  
  
  valor int = 3;
  valor = 3; 
  imprimir (valor);
  
  valor duplo 1 = 3;
  valor1 = 3,5; 
  imprimir (valor1);
  
  
  imprimir (pi + valor + valor1);
  
  // concatenado 
  print ("Valor de PI: $ pi \ n"
        "Valor: $ valor \ n"
        "Valor 2: $ valor1");
  
}

