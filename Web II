----------------------------------------

void main () {
 
  duplo a = 12,5;
  duplo b = 24;
  
 
  soma duplo = a + b;
  
  
  subtrair duplo = a - b;
  
  
  multi duplo = a * b;
  

  div duplo = a / b;
  
  print ("A soma entre 12,5 e 24 é: $ soma \ n"
        "A subtração entre 12,5 e 24 é: $ subtrair \ n"
        "A multiplicação entre 12,5 e 24 é: $ multi \ n"
        "A divisão entre 12,5 e 24 é: $ div");
  
}

